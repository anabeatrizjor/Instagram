<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.view.LoginActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/logoUser"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:src="@drawable/user_png"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"/>

            <TextView
                android:id="@+id/titleAdicionarPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adicionar foto do perfil"
                android:fontFamily="@font/roboto_bold"
                android:layout_below="@id/logoUser"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/textAdicionarPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adicione uma foto do perfil para que seus amigos saibam que é você."
                android:fontFamily="@font/roboto_medium"
                android:layout_below="@id/titleAdicionarPhoto"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/buttonAdicionarPhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ADICIONAR SUA FOTO"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_bold"
                android:backgroundTint="@color/blue"
                android:layout_marginTop="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_below="@+id/textAdicionarPhoto"/>

            <TextView
                android:id="@+id/buttonPularAddPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PULAR"
                android:textColor="@color/blue"
                android:fontFamily="@font/roboto_bold"
                android:textSize="18sp"
                android:layout_below="@id/buttonAdicionarPhoto"
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true"/>


        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>